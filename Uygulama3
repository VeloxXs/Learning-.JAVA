import java.util.Scanner;
public class program2 {
    public static void main(String[] args) {
//yapmayı istediğimz şey vücut kitle endeksi . kitle endeksi= kilo(kg) / boy(cm)*boy(cm)
       
        Scanner scanner = new Scanner(System.in);
        System.out.println("Vücut kitle endeksi programına hoşgeldiniz. ");
        System.out.println("Vücut kitle endeksinizi hesaplayabilmemiz için sırayla boy(cm) ve Kilonuzu(kg) giriniz: ");

        Double boy = scanner.nextDouble();
        Double kilo = scanner.nextDouble();
        boy = boy / 100;
        Double product = kilo / (boy * boy);
        System.out.println("Vücut kitle endeksiniz: " + product);
    }
}
